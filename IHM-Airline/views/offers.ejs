<%- include('includes/head.ejs') %>

</head>

<body>
    <!-- Navbar (sit on top) -->
    <%- include('includes/navbar.ejs') %> 

        <!-- The Tour Section -->
        <div id="tour">
            <div class="w3-container w3-content w3-padding-64" style="max-width:1000px">
                <h2 class="w3-wide w3-center">Result of the research</h2>   
                <p class="w3-opacity w3-center"><i>Remember to book your tickets!</i></p><br>
    
    
                <div class="w3-row-padding w3-padding-32" style="margin:0 -16px">
    
                    <% if(offs.length!=0){ let i=1; offs.forEach(function(data){ %>
                        <div class="w3-third w3-margin-bottom">
                            <img src="../images/Av.jpg" alt="New York" style="width:100%" class="w3-hover-opacity">
                            <form action="/users/add">
                                <div class="w3-container w3-light-grey">
    
                                    <p><b>Royal Air</b></p>
                                    <p><b>FROM :</b>
                                        <%=data.lieu_depart %>
                                    </p>
                                    <p><b>TO :</b>
                                        <%=data.lieu_d_arriver %>
                                    </p>
                                    <p class="w3-opacity">
                                        <%=data.date %>
                                    </p>
                                    <button type="submit" class="w3-button w3-black w3-margin-bottom">
                                        Buy Tickets
                                    </button>
                                </div>
                            </form>
                        </div>
                        <% i++; }) %>
                            <% } else{ %>
                                <div class="w3-container">
    
                                    <div class="w3-card-4" style="width:50%;">
    
                                        <div class="w3-container">
                                            <p>No Offers Found !</p>
                                        </div>
    
                                    </div>
                                </div>
                                <% } %>
    
                </div>
            </div>
        </div>

    <%- include('includes/footer.ejs') %> 